<style>
    #box{
        width: 500px;
        height: 500px;
        border: 2px solid rgb(17, 16, 24);
        display: none;
    }
</style>
<body>
    <div id="box">
        <button onclick="closeb()">close</button>
    </div>
</body>
<script>
    function opnbox(){
        document.getElementById("box").style.display="block"
    }
    setTimeout(opnbox,2000)

    function closeb(){
        document.getElementById("box").remove()
    }
    
</script>
